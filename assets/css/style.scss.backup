---

/* ========================================
   VARIABLES CSS PERSONALIZADAS
======================================== */
:root {
  /* Colores principales */
  --primary-50: #f0f9ff;
  --primary-100: #e0f2fe;
  --primary-200: #bae6fd;
  --primary-300: #7dd3fc;
  --primary-400: #38bdf8;
  --primary-500: #0ea5e9;
  --primary-600: #0284c7;
  --primary-700: #0369a1;
  --primary-800: #075985;
  --primary-900: #0c4a6e;

  /* Grises */
  --gray-50: #f9fafb;
  --gray-100: #f3f4f6;
  --gray-200: #e5e7eb;
  --gray-300: #d1d5db;
  --gray-400: #9ca3af;
  --gray-500: #6b7280;
  --gray-600: #4b5563;
  --gray-700: #374151;
  --gray-800: #1f2937;
  --gray-900: #111827;

  /* Espaciado */
  --space-1: 0.25rem;
  --space-2: 0.5rem;
  --space-3: 0.75rem;
  --space-4: 1rem;
  --space-5: 1.25rem;
  --space-6: 1.5rem;
  --space-8: 2rem;
  --space-10: 2.5rem;
  --space-12: 3rem;
  --space-16: 4rem;
  --space-20: 5rem;

  /* Sombras */
  --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
  --shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
  --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
  --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
  --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
  --shadow-2xl: 0 25px 50px -12px rgb(0 0 0 / 0.25);

  /* Gradientes */
  --gradient-hero: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --gradient-card: linear-gradient(145deg, #ffffff 0%, #f8fafc 100%);

  /* Transiciones */
  --transition-all: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-colors: color 0.3s cubic-bezier(0.4, 0, 0.2, 1), background-color 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* ========================================
   RESET Y BASE
======================================== */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
}

body {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  line-height: 1.6;
  color: var(--gray-800);
  background-color: var(--gray-50);
}

/* ========================================
   HEADER PROFESIONAL
======================================== */
.professional-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-bottom: 1px solid var(--gray-200);
  transition: var(--transition-all);
  
  &.scrolled {
    background: rgba(255, 255, 255, 0.98);
    box-shadow: var(--shadow-lg);
  }
  
  &.hidden {
    transform: translateY(-100%);
  }
  
  .header-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 var(--space-4);
    
    @media (min-width: 640px) {
      padding: 0 var(--space-6);
    }
    
    @media (min-width: 1024px) {
      padding: 0 var(--space-8);
    }
  }
  
  .header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-4) 0;
    
    @media (min-width: 768px) {
      padding: var(--space-5) 0;
    }
  }
  
  .header-brand {
    flex: 1;
    
    .brand-link {
      text-decoration: none;
      color: inherit;
      display: block;
      
      &:hover {
        text-decoration: none;
      }
    }
    
    .brand-name {
      font-size: var(--space-5);
      font-weight: 700;
      color: var(--gray-900);
      margin: 0;
      line-height: 1.2;
      
      @media (min-width: 768px) {
        font-size: var(--space-6);
      }
      
      @media (max-width: 640px) {
        font-size: var(--space-4);
      }
    }
    
    .brand-title {
      font-size: var(--space-3);
      color: var(--primary-600);
      margin: 0;
      font-weight: 500;
      
      @media (min-width: 768px) {
        font-size: var(--space-4);
      }
      
      @media (max-width: 640px) {
        font-size: 0.75rem;
      }
    }
  }
  
  .header-nav {
    display: flex;
    align-items: center;
    gap: var(--space-6);
    
    @media (max-width: 1024px) {
      gap: var(--space-4);
    }
  }
  
  .nav-links {
    display: none;
    align-items: center;
    gap: var(--space-6);
    
    @media (min-width: 1024px) {
      display: flex;
    }
    
    .nav-link {
      font-size: var(--space-4);
      font-weight: 500;
      color: var(--gray-700);
      text-decoration: none;
      padding: var(--space-2) var(--space-3);
      border-radius: var(--space-2);
      transition: var(--transition-all);
      
      &:hover {
        color: var(--primary-600);
        background: var(--gray-50);
        text-decoration: none;
      }
      
      &.nav-cta {
        background: var(--gradient-primary);
        color: white;
        
        &:hover {
          background: var(--primary-700);
          transform: translateY(-1px);
        }
      }
    }
  }
  
  .header-actions {
    display: none;
    align-items: center;
    gap: var(--space-3);
    
    @media (min-width: 768px) {
      display: flex;
    }
  }
  
  .header-btn {
    padding: var(--space-2) var(--space-4);
    border-radius: var(--space-2);
    font-size: var(--space-3);
    font-weight: 600;
    text-decoration: none;
    transition: var(--transition-all);
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
    
    &:hover {
      text-decoration: none;
      transform: translateY(-1px);
    }
    
    &.header-btn-primary {
      background: var(--gradient-primary);
      color: white;
      
      &:hover {
        box-shadow: var(--shadow-md);
      }
    }
    
    &.header-btn-secondary {
      background: transparent;
      color: var(--primary-600);
      border: 1px solid var(--primary-600);
      
      &:hover {
        background: var(--primary-600);
        color: white;
      }
    }
  }
  
  .mobile-menu-btn {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 40px;
    height: 40px;
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--space-2);
    border-radius: var(--space-2);
    transition: var(--transition-all);
    
    @media (min-width: 1024px) {
      display: none;
    }
    
    &:hover {
      background: var(--gray-100);
    }
    
    &.active {
      .hamburger-line {
        &:nth-child(1) {
          transform: rotate(45deg) translate(5px, 5px);
        }
        
        &:nth-child(2) {
          opacity: 0;
        }
        
        &:nth-child(3) {
          transform: rotate(-45deg) translate(7px, -6px);
        }
      }
    }
    
    .hamburger-line {
      width: 20px;
      height: 2px;
      background: var(--gray-700);
      margin: 2px 0;
      transition: var(--transition-all);
      border-radius: 1px;
    }
  }
  
  .mobile-menu {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: white;
    border-bottom: 1px solid var(--gray-200);
    box-shadow: var(--shadow-lg);
    transform: translateY(-100%);
    opacity: 0;
    visibility: hidden;
    transition: var(--transition-all);
    
    &.active {
      transform: translateY(0);
      opacity: 1;
      visibility: visible;
    }
    
    .mobile-menu-content {
      padding: var(--space-6) var(--space-4);
      max-width: 1280px;
      margin: 0 auto;
    }
    
    .mobile-nav-link {
      display: block;
      padding: var(--space-3) var(--space-4);
      font-size: var(--space-4);
      font-weight: 500;
      color: var(--gray-700);
      text-decoration: none;
      border-radius: var(--space-2);
      margin-bottom: var(--space-2);
      transition: var(--transition-all);
      
      &:hover {
        background: var(--gray-50);
        color: var(--primary-600);
        text-decoration: none;
      }
    }
    
    .mobile-actions {
      display: flex;
      gap: var(--space-3);
      margin-top: var(--space-6);
      padding-top: var(--space-6);
      border-top: 1px solid var(--gray-200);
    }
    
    .mobile-btn {
      flex: 1;
      padding: var(--space-3) var(--space-4);
      border-radius: var(--space-2);
      font-size: var(--space-4);
      font-weight: 600;
      text-decoration: none;
      text-align: center;
      transition: var(--transition-all);
      
      &:hover {
        text-decoration: none;
        transform: translateY(-1px);
      }
      
      &.mobile-btn-primary {
        background: var(--gradient-primary);
        color: white;
      }
      
      &.mobile-btn-secondary {
        background: transparent;
        color: var(--primary-600);
        border: 1px solid var(--primary-600);
        
        &:hover {
          background: var(--primary-600);
          color: white;
        }
      }
    }
  }
}

/* ========================================
   FOTO DE PERFIL PROFESIONAL
======================================== */
.profile-photo {
  width: 200px;
  height: 200px;
  border-radius: 50%;
  object-fit: cover;
  border: 4px solid white;
  box-shadow: var(--shadow-xl);
  transition: var(--transition-all);
  
  &:hover {
    transform: scale(1.05);
    box-shadow: var(--shadow-2xl);
  }
  
  @media (min-width: 768px) {
    width: 250px;
    height: 250px;
  }
  
  @media (min-width: 1024px) {
    width: 300px;
    height: 300px;
  }
}

.profile-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-6);
  margin: var(--space-8) 0;
  
  @media (min-width: 768px) {
    flex-direction: row;
    text-align: left;
    gap: var(--space-8);
  }
  
  .profile-content {
    flex: 1;
    text-align: center;
    
    @media (min-width: 768px) {
      text-align: left;
    }
  }
  
  .profile-intro {
    font-size: var(--space-5);
    font-weight: 300;
    color: var(--gray-600);
    margin-bottom: var(--space-4);
    
    @media (min-width: 768px) {
      font-size: var(--space-6);
    }
  }
  
  .profile-highlight {
    font-size: var(--space-6);
    font-weight: 700;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: var(--space-4);
    
    @media (min-width: 768px) {
      font-size: var(--space-8);
    }
  }
}

/* ===== HERO SECTION REDESIGN - MÁS DINÁMICO Y PROFESIONAL ===== */
.hero-section {
  position: relative;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--gradient-hero);
  color: white;
  overflow: hidden;
  
  /* Efecto de fondo animado */
  &::before {
    content: '';
    position: absolute;
    inset: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><defs><radialGradient id="a"><stop offset="0%" stop-color="%23ffffff" stop-opacity="0.1"/><stop offset="100%" stop-color="%23ffffff" stop-opacity="0"/></radialGradient></defs><circle cx="200" cy="200" r="100" fill="url(%23a)"/><circle cx="800" cy="300" r="150" fill="url(%23a)"/><circle cx="400" cy="700" r="120" fill="url(%23a)"/></svg>');
    animation: float 20s ease-in-out infinite;
    pointer-events: none;
    z-index: 1;
  }
  
  .hero-content {
    position: relative;
    z-index: 10;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-8);
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--space-8) var(--space-4);
    width: 100%;
    
    @media (min-width: 768px) {
      gap: var(--space-10);
      padding: var(--space-12) var(--space-6);
    }
    
    .hero-profile {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: var(--space-6);
      width: 100%;
      position: relative;
      
      @media (min-width: 768px) {
        flex-direction: row;
        gap: var(--space-8);
        align-items: center;
        justify-content: center;
      }
      
      @media (min-width: 1024px) {
        gap: var(--space-10);
      }
      
      .hero-photo {
        width: 160px;
        height: 160px;
        border-radius: 24px;
        object-fit: cover;
        object-position: center center;
        border: 3px solid rgba(255, 255, 255, 0.2);
        box-shadow: 
          0 10px 30px rgba(0, 0, 0, 0.3),
          0 0 0 1px rgba(255, 255, 255, 0.1);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        flex-shrink: 0;
        
        /* Efecto de resplandor sutil */
        &::before {
          content: '';
          position: absolute;
          top: -2px;
          left: -2px;
          right: -2px;
          bottom: -2px;
          background: linear-gradient(45deg, 
            rgba(59, 130, 246, 0.3), 
            rgba(147, 51, 234, 0.3), 
            rgba(59, 130, 246, 0.3));
          border-radius: 26px;
          z-index: -1;
          opacity: 0;
          transition: opacity 0.4s ease;
        }
        
        &:hover {
          transform: translateY(-8px) scale(1.02);
          border-color: rgba(255, 255, 255, 0.4);
          box-shadow: 
            0 20px 40px rgba(0, 0, 0, 0.4),
            0 0 0 1px rgba(255, 255, 255, 0.2);
          
          &::before {
            opacity: 1;
          }
        }
        
        @media (min-width: 768px) {
          width: 180px;
          height: 180px;
          border-radius: 28px;
          
          &::before {
            border-radius: 30px;
          }
        }
        
        @media (min-width: 1024px) {
          width: 200px;
          height: 200px;
          border-radius: 32px;
          
          &::before {
            border-radius: 34px;
          }
        }
      }
      
      .hero-text {
        text-align: center;
        flex: 1;
        max-width: 600px;
        
        @media (min-width: 768px) {
          text-align: left;
          max-width: none;
        }
        
        h1 {
          font-size: clamp(1.75rem, 4vw, 2.5rem);
          font-weight: 700;
          margin-bottom: var(--space-2);
          background: linear-gradient(135deg, #ffffff 0%, #e2e8f0 100%);
          -webkit-background-clip: text;
          -webkit-text-fill-color: transparent;
          background-clip: text;
          line-height: 1.2;
          
          @media (min-width: 768px) {
            font-size: clamp(2rem, 4vw, 3rem);
          }
        }
        
        .subtitle {
          font-size: clamp(1rem, 2.5vw, 1.25rem);
          font-weight: 500;
          color: rgba(255, 255, 255, 0.9);
          margin-bottom: var(--space-4);
          position: relative;
          display: inline-block;
          
          &::after {
            content: '';
            position: absolute;
            bottom: -4px;
            left: 0;
            width: 100%;
            height: 2px;
            background: linear-gradient(90deg, 
              rgba(59, 130, 246, 0.8), 
              rgba(147, 51, 234, 0.8));
            border-radius: 1px;
          }
        }
        
        .hero-description {
          font-size: clamp(0.9rem, 2vw, 1.1rem);
          line-height: 1.6;
          color: rgba(255, 255, 255, 0.85);
          font-weight: 400;
          margin: 0;
          
          @media (min-width: 768px) {
            font-size: clamp(1rem, 2vw, 1.125rem);
            line-height: 1.7;
          }
        }
      }
    }
    
    /* Estadísticas rediseñadas - más compactas y elegantes */
    .hero-stats {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: var(--space-3);
      margin-top: var(--space-6);
      flex-wrap: wrap;
      
      @media (min-width: 768px) {
        flex-wrap: nowrap;
        gap: var(--space-6);
        margin-top: var(--space-8);
      }
      
      .stat-item {
        background: rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 16px;
        padding: var(--space-4) var(--space-5);
        text-align: center;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
        min-width: 120px;
        
        /* Efecto de brillo sutil */
        &::before {
          content: '';
          position: absolute;
          top: 0;
          left: -100%;
          width: 100%;
          height: 100%;
          background: linear-gradient(90deg, 
            transparent, 
            rgba(255, 255, 255, 0.1), 
            transparent);
          transition: left 0.6s ease;
        }
        
        &:hover {
          transform: translateY(-4px);
          background: rgba(255, 255, 255, 0.12);
          border-color: rgba(255, 255, 255, 0.25);
          box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
          
          &::before {
            left: 100%;
          }
        }
        
        @media (min-width: 768px) {
          padding: var(--space-5) var(--space-6);
          min-width: 140px;
          border-radius: 20px;
        }
        
        .stat-number {
          display: block;
          font-size: clamp(1.5rem, 3vw, 2rem);
          font-weight: 800;
          margin-bottom: var(--space-1);
          background: linear-gradient(135deg, #ffffff 0%, #cbd5e1 100%);
          -webkit-background-clip: text;
          -webkit-text-fill-color: transparent;
          background-clip: text;
          
          @media (min-width: 768px) {
            font-size: clamp(1.75rem, 3vw, 2.25rem);
          }
        }
        
        .stat-label {
          font-size: clamp(0.7rem, 1.5vw, 0.8rem);
          font-weight: 500;
          color: rgba(255, 255, 255, 0.8);
          line-height: 1.3;
          
          @media (min-width: 768px) {
            font-size: clamp(0.75rem, 1.5vw, 0.875rem);
          }
        }
      }
    }
    
    /* Botones CTA rediseñados */
    .hero-cta {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;
      gap: var(--space-3);
      margin-top: var(--space-6);
      
      @media (min-width: 768px) {
        gap: var(--space-4);
        margin-top: var(--space-8);
      }
      
      .btn {
        padding: var(--space-3) var(--space-5);
        font-size: 0.9rem;
        font-weight: 500;
        border-radius: 12px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: var(--space-2);
        position: relative;
        overflow: hidden;
        
        @media (min-width: 768px) {
          padding: var(--space-3) var(--space-6);
          font-size: 1rem;
          border-radius: 14px;
        }
        
        &:hover {
          transform: translateY(-2px);
          box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        }
        
        &.btn-primary {
          background: linear-gradient(135deg, #3b82f6 0%, #9333ea 100%);
          color: white;
          border: none;
          
          &:hover {
            background: linear-gradient(135deg, #2563eb 0%, #7c3aed 100%);
          }
        }
        
        &.btn-outline {
          background: rgba(255, 255, 255, 0.1);
          color: white;
          border: 1px solid rgba(255, 255, 255, 0.3);
          
          &:hover {
            background: rgba(255, 255, 255, 0.2);
            border-color: rgba(255, 255, 255, 0.5);
          }
        }
        
        &:not(.btn-primary):not(.btn-outline) {
          background: rgba(255, 255, 255, 0.15);
          color: white;
          border: 1px solid rgba(255, 255, 255, 0.2);
          
          &:hover {
            background: rgba(255, 255, 255, 0.25);
            border-color: rgba(255, 255, 255, 0.4);
          }
        }
      }
    }
  }
  
  /* Indicador de scroll */
  .scroll-indicator {
    position: absolute;
    bottom: var(--space-8);
    left: 50%;
    transform: translateX(-50%);
    animation: bounce 2s infinite;
    z-index: 10;
    
    .scroll-arrow {
      width: 24px;
      height: 24px;
      border: 2px solid white;
      border-top: none;
      border-right: none;
      transform: rotate(-45deg);
      opacity: 0.7;
    }
  }
}

/* ===== LAYOUT PRINCIPAL ===== */
#content-wrapper {
  margin-top: 80px;
  
  @media (min-width: 768px) {
    margin-top: 90px;
  }
}

/* ========================================
   SISTEMA DE DISEÑO PROFESIONAL
======================================== */
:root {
  /* Colores principales */
  --primary-50: #eff6ff;
  --primary-100: #dbeafe;
  --primary-200: #bfdbfe;
  --primary-300: #93c5fd;
  --primary-400: #60a5fa;
  --primary-500: #3b82f6;
  --primary-600: #2563eb;
  --primary-700: #1d4ed8;
  --primary-800: #1e40af;
  --primary-900: #1e3a8a;
  
  /* Colores neutros */
  --gray-50: #f9fafb;
  --gray-100: #f3f4f6;
  --gray-200: #e5e7eb;
  --gray-300: #d1d5db;
  --gray-400: #9ca3af;
  --gray-500: #6b7280;
  --gray-600: #4b5563;
  --gray-700: #374151;
  --gray-800: #1f2937;
  --gray-900: #111827;
  
  /* Colores de acento */
  --accent-50: #fef3c7;
  --accent-500: #f59e0b;
  --accent-600: #d97706;
  
  /* Gradientes */
  --gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --gradient-secondary: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  --gradient-hero: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  
  /* Sombras */
  --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
  --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
  --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
  --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
  --shadow-2xl: 0 25px 50px -12px rgb(0 0 0 / 0.25);
  
  /* Espaciado */
  --space-1: 0.25rem;
  --space-2: 0.5rem;
  --space-3: 0.75rem;
  --space-4: 1rem;
  --space-5: 1.25rem;
  --space-6: 1.5rem;
  --space-8: 2rem;
  --space-10: 2.5rem;
  --space-12: 3rem;
  --space-16: 4rem;
  --space-20: 5rem;
  --space-24: 6rem;
  --space-32: 8rem;
  
  /* Tipografía */
  --font-sans: 'Inter', ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
  --font-mono: ui-monospace, SFMono-Regular, 'SF Mono', Consolas, 'Liberation Mono', Menlo, monospace;
  
  /* Transiciones */
  --transition-all: all 0.15s ease-in-out;
  --transition-colors: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out;
  --transition-transform: transform 0.15s ease-in-out;
}

/* ========================================
   RESET Y BASE
======================================== */
*,
*::before,
*::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html {
  scroll-behavior: smooth;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

body {
  font-family: var(--font-sans);
  line-height: 1.6;
  color: var(--gray-900);
  background-color: white;
  overflow-x: hidden;
}

/* ========================================
   LAYOUT PRINCIPAL
======================================== */
#main_content {
  max-width: none;
  padding: 0;
}

.container {
  max-width: 1280px;
  margin: 0 auto;
  padding: 0 var(--space-4);
  
  @media (min-width: 640px) {
    padding: 0 var(--space-6);
  }
  
  @media (min-width: 1024px) {
    padding: 0 var(--space-8);
  }
}

/* ========================================
   HERO SECTION - ESTILOS MOVIDOS ARRIBA AL NUEVO DISEÑO
======================================== */
    margin-bottom: var(--space-8);
    opacity: 0.9;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    animation: slideInUp 1s ease-out 0.4s both;
  }
  
  .hero-stats {
    display: flex;
    justify-content: center;
    align-items: stretch;
    gap: var(--space-4);
    margin-top: var(--space-8);
    animation: slideInUp 1s ease-out 0.6s both;
    flex-wrap: wrap;
    
    @media (min-width: 768px) {
      flex-wrap: nowrap;
      gap: var(--space-6);
    }
    
    .stat-item {
      flex: 1;
      min-width: 160px;
      max-width: 200px;
      padding: var(--space-5);
      background: rgba(255, 255, 255, 0.1);
      border-radius: 1rem;
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      transition: var(--transition-transform);
      text-align: center;
      display: flex;
      flex-direction: column;
      justify-content: center;
      
      @media (min-width: 768px) {
        padding: var(--space-6);
        min-width: 180px;
        max-width: 220px;
      }
      
      &:hover {
        transform: translateY(-5px);
        background: rgba(255, 255, 255, 0.15);
        border-color: rgba(255, 255, 255, 0.3);
      }
      
      .stat-number {
        display: block;
        font-size: clamp(1.75rem, 3.5vw, 2.5rem);
        font-weight: 800;
        margin-bottom: var(--space-2);
        color: var(--white);
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        
        @media (min-width: 768px) {
          font-size: clamp(2rem, 4vw, 3rem);
        }
      }
      
      .stat-label {
        font-size: 0.8rem;
        opacity: 0.9;
        font-weight: 500;
        line-height: 1.3;
        color: var(--white);
        
        @media (min-width: 768px) {
          font-size: 0.875rem;
        }
      }
    }
  }
  
  .scroll-indicator {
    position: absolute;
    bottom: var(--space-8);
    left: 50%;
    transform: translateX(-50%);
    animation: bounce 2s infinite;
    
    .scroll-arrow {
      width: 24px;
      height: 24px;
      border: 2px solid white;
      border-top: none;
      border-right: none;
      transform: rotate(-45deg);
      opacity: 0.7;
    }
  }
}

/* ========================================
   SECCIONES
======================================== */
.section {
  padding: var(--space-20) 0;
  position: relative;
  z-index: 5;
  
  /* Primera sección después del hero */
  &:first-of-type {
    padding-top: var(--space-24);
  }
  
  &.section-alt {
    background-color: var(--gray-50);
  }
  
  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
    
    .section-title {
      font-size: clamp(2rem, 4vw, 3rem);
      font-weight: 800;
      color: var(--gray-900);
      margin-bottom: var(--space-4);
      position: relative;
      
      &::after {
        content: '';
        position: absolute;
        bottom: -var(--space-3);
        left: 50%;
        transform: translateX(-50%);
        width: 60px;
        height: 4px;
        background: var(--gradient-primary);
        border-radius: 2px;
      }
    }
    
    .section-subtitle {
      font-size: 1.125rem;
      color: var(--gray-600);
      max-width: 600px;
      margin: 0 auto;
    }
  }
}

/* ========================================
   CONTACTO PROFESIONAL
======================================== */
.contact-section {
  background: white;
  border-radius: 1.5rem;
  box-shadow: var(--shadow-lg);
  padding: var(--space-8);
  margin: var(--space-8) 0;
  
  .contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-6);
    
    .contact-item {
      display: flex;
      align-items: center;
      padding: var(--space-6);
      background: var(--gray-50);
      border-radius: 1rem;
      transition: var(--transition-all);
      border: 1px solid transparent;
      
      &:hover {
        transform: translateY(-3px);
        box-shadow: var(--shadow-lg);
        border-color: var(--primary-200);
        background: white;
      }
      
      .contact-icon {
        width: 48px;
        height: 48px;
        background: var(--gradient-primary);
        border-radius: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: var(--space-4);
        font-size: 1.25rem;
        flex-shrink: 0;
      }
      
      .contact-info {
        flex: 1;
        min-width: 0;
        
        .contact-label {
          font-size: 0.75rem;
          color: var(--gray-500);
          margin-bottom: var(--space-1);
          font-weight: 600;
          text-transform: uppercase;
          letter-spacing: 0.05em;
        }
        
        .contact-value {
          font-weight: 600;
          color: var(--gray-900);
          word-break: break-word;
          
          a {
            color: inherit;
            text-decoration: none;
            transition: var(--transition-colors);
            
            &:hover {
              color: var(--primary-600);
            }
          }
        }
      }
    }
  }
}

/* ========================================
   HABILIDADES PROFESIONALES
======================================== */
.skills-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: var(--space-8);
  
  .skill-category {
    background: white;
    border-radius: 1.5rem;
    padding: var(--space-8);
    box-shadow: var(--shadow-md);
    transition: var(--transition-all);
    border: 1px solid var(--gray-100);
    position: relative;
    overflow: hidden;
    
    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: var(--gradient-primary);
    }
    
    &:hover {
      transform: translateY(-8px);
      box-shadow: var(--shadow-xl);
      border-color: var(--primary-200);
    }
    
    .category-header {
      display: flex;
      align-items: center;
      margin-bottom: var(--space-8);
      
      .category-icon {
        width: 56px;
        height: 56px;
        background: var(--gradient-primary);
        border-radius: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: var(--space-4);
        font-size: 1.5rem;
        flex-shrink: 0;
      }
      
      .category-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--gray-900);
        margin: 0;
      }
    }
    
    .skills-list {
      list-style: none;
      
      li {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: var(--space-4) 0;
        border-bottom: 1px solid var(--gray-100);
        transition: var(--transition-all);
        
        &:last-child {
          border-bottom: none;
        }
        
        &:hover {
          padding-left: var(--space-2);
          background: var(--gray-50);
          margin: 0 calc(-1 * var(--space-2));
          border-radius: 0.5rem;
        }
        
        .skill-name {
          font-weight: 500;
          color: var(--gray-900);
          flex: 1;
        }
        
        .skill-level {
          padding: var(--space-1) var(--space-3);
          border-radius: 9999px;
          font-size: 0.75rem;
          font-weight: 600;
          text-transform: uppercase;
          letter-spacing: 0.05em;
          
          &.level-expert {
            background: var(--gradient-primary);
            color: white;
          }
          
          &.level-advanced {
            background: var(--gradient-secondary);
            color: white;
          }
          
          &.level-intermediate {
            background: var(--accent-500);
            color: white;
          }
        }
      }
    }
  }
}

/* ========================================
   TIMELINE PROFESIONAL
======================================== */
.timeline {
  position: relative;
  max-width: 900px;
  margin: 0 auto;
  
  &::before {
    content: '';
    position: absolute;
    left: var(--space-8);
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--gradient-primary);
    
    @media (min-width: 768px) {
      left: 50%;
      transform: translateX(-50%);
    }
  }
  
  .timeline-item {
    position: relative;
    margin-bottom: var(--space-12);
    
    @media (min-width: 768px) {
      width: 50%;
      
      &:nth-child(odd) {
        left: 0;
        padding-right: var(--space-8);
        
        .timeline-content {
          text-align: right;
        }
        
        .timeline-marker {
          right: calc(-1 * var(--space-4));
        }
      }
      
      &:nth-child(even) {
        left: 50%;
        padding-left: var(--space-8);
        
        .timeline-marker {
          left: calc(-1 * var(--space-4));
        }
      }
    }
    
    .timeline-marker {
      position: absolute;
      top: var(--space-6);
      left: calc(var(--space-8) - var(--space-2));
      width: var(--space-4);
      height: var(--space-4);
      background: var(--primary-600);
      border-radius: 50%;
      border: 3px solid white;
      box-shadow: 0 0 0 3px var(--primary-600);
      z-index: 10;
    }
    
    .timeline-content {
      background: white;
      border-radius: 1.5rem;
      padding: var(--space-8);
      box-shadow: var(--shadow-lg);
      margin-left: var(--space-12);
      transition: var(--transition-all);
      border: 1px solid var(--gray-100);
      
      @media (min-width: 768px) {
        margin-left: 0;
      }
      
      &:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-xl);
        border-color: var(--primary-200);
      }
      
      .timeline-date {
        display: inline-block;
        background: var(--gradient-primary);
        color: white;
        padding: var(--space-2) var(--space-4);
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 600;
        margin-bottom: var(--space-4);
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }
      
      .timeline-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--gray-900);
        margin-bottom: var(--space-2);
      }
      
      .timeline-company {
        color: var(--primary-600);
        font-weight: 600;
        margin-bottom: var(--space-4);
        font-size: 1rem;
      }
      
      .timeline-description {
        color: var(--gray-600);
        line-height: 1.6;
        
        ul {
          margin-top: var(--space-3);
          padding-left: var(--space-5);
          
          li {
            margin-bottom: var(--space-2);
            position: relative;
            
            &::before {
              content: '▸';
              color: var(--primary-600);
              font-weight: 700;
              position: absolute;
              left: calc(-1 * var(--space-5));
            }
          }
        }
      }
    }
  }
}

/* ========================================
   CARDS PROFESIONALES
======================================== */
.card {
  background: white;
  border-radius: 1.5rem;
  box-shadow: var(--shadow-md);
  padding: var(--space-8);
  transition: var(--transition-all);
  border: 1px solid var(--gray-100);
  position: relative;
  overflow: hidden;
  
  &::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--gradient-primary);
    transform: scaleX(0);
    transition: var(--transition-transform);
  }
  
  &:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
    border-color: var(--primary-200);
    
    &::before {
      transform: scaleX(1);
    }
  }
  
  .card-header {
    margin-bottom: var(--space-6);
    
    .card-title {
      font-size: 1.25rem;
      font-weight: 700;
      color: var(--gray-900);
      margin-bottom: var(--space-2);
    }
    
    .card-subtitle {
      color: var(--gray-500);
      font-weight: 500;
      font-size: 0.875rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }
  }
  
  .card-body {
    color: var(--gray-600);
    line-height: 1.6;
    
    ul {
      margin-top: var(--space-3);
      
      li {
        margin-bottom: var(--space-2);
        position: relative;
        padding-left: var(--space-5);
        
        &::before {
          content: '✓';
          color: var(--primary-600);
          font-weight: 700;
          position: absolute;
          left: 0;
        }
      }
    }
  }
  
  .card-footer {
    margin-top: var(--space-6);
    padding-top: var(--space-6);
    border-top: 1px solid var(--gray-100);
    
    .badge-group {
      display: flex;
      flex-wrap: wrap;
      gap: var(--space-2);
    }
  }
}

/* ========================================
   BADGES Y BOTONES
======================================== */
.badge {
  display: inline-block;
  padding: var(--space-2) var(--space-3);
  background: var(--gradient-primary);
  color: white;
  border-radius: 9999px;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  transition: var(--transition-transform);
  
  &:hover {
    transform: translateY(-1px);
  }
  
  &.badge-secondary {
    background: var(--gradient-secondary);
  }
}

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: var(--space-3) var(--space-6);
  background: var(--gradient-primary);
  color: white;
  text-decoration: none;
  border-radius: 0.75rem;
  font-weight: 600;
  transition: var(--transition-all);
  border: none;
  cursor: pointer;
  font-size: 0.875rem;
  
  &:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    text-decoration: none;
  }
  
  &.btn-outline {
    background: transparent;
    border: 2px solid var(--primary-600);
    color: var(--primary-600);
    
    &:hover {
      background: var(--primary-600);
      color: white;
    }
  }
}

/* ========================================
   ANIMACIONES
======================================== */
@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes bounce {
  0%, 20%, 53%, 80%, 100% {
    transform: translateX(-50%) translateY(0);
  }
  40%, 43% {
    transform: translateX(-50%) translateY(-10px);
  }
  70% {
    transform: translateX(-50%) translateY(-5px);
  }
  90% {
    transform: translateX(-50%) translateY(-2px);
  }
}

@keyframes float {
  0%, 100% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-20px);
  }
}

/* ========================================
   FORMULARIO DE CONTACTO
======================================== */
.contact-form {
  background: white;
  border-radius: 1.5rem;
  box-shadow: var(--shadow-lg);
  padding: var(--space-8);
  margin: var(--space-8) 0;
  border: 1px solid var(--gray-100);
  
  .form-group {
    margin-bottom: var(--space-6);
    
    label {
      display: block;
      font-weight: 600;
      color: var(--gray-700);
      margin-bottom: var(--space-2);
      font-size: 0.875rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }
    
    input,
    textarea,
    select {
      width: 100%;
      padding: var(--space-3) var(--space-4);
      border: 2px solid var(--gray-200);
      border-radius: var(--space-2);
      font-size: var(--space-4);
      font-family: var(--font-sans);
      transition: var(--transition-all);
      background: var(--gray-50);
      
      &:focus {
        outline: none;
        border-color: var(--primary-500);
        background: white;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
      }
      
      &::placeholder {
        color: var(--gray-400);
      }
    }
    
    textarea {
      resize: vertical;
      min-height: 120px;
    }
    
    .form-error {
      color: var(--error-color);
      font-size: 0.75rem;
      margin-top: var(--space-1);
      display: none;
    }
    
    &.error {
      input,
      textarea,
      select {
        border-color: var(--error-color);
        background: #fef2f2;
      }
      
      .form-error {
        display: block;
      }
    }
  }
  
  .form-row {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-4);
    
    @media (min-width: 640px) {
      grid-template-columns: 1fr 1fr;
    }
  }
  
  .form-submit {
    text-align: center;
    margin-top: var(--space-8);
    
    .btn-submit {
      background: var(--gradient-primary);
      color: white;
      border: none;
      padding: var(--space-4) var(--space-8);
      border-radius: var(--space-2);
      font-size: var(--space-4);
      font-weight: 600;
      cursor: pointer;
      transition: var(--transition-all);
      position: relative;
      overflow: hidden;
      
      &:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-lg);
      }
      
      &:disabled {
        opacity: 0.6;
        cursor: not-allowed;
        transform: none;
      }
      
      .btn-text {
        transition: var(--transition-all);
      }
      
      .btn-loading {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        opacity: 0;
        transition: var(--transition-all);
      }
      
      &.loading {
        .btn-text {
          opacity: 0;
        }
        
        .btn-loading {
          opacity: 1;
        }
      }
    }
  }
  
  .form-success,
  .form-error-message {
    padding: var(--space-4);
    border-radius: var(--space-2);
    margin-top: var(--space-4);
    text-align: center;
    font-weight: 500;
    display: none;
    
    &.show {
      display: block;
    }
  }
  
  .form-success {
    background: #f0fdf4;
    color: #166534;
    border: 1px solid #bbf7d0;
  }
  
  .form-error-message {
    background: #fef2f2;
    color: #dc2626;
    border: 1px solid #fecaca;
  }
}

/* Spinner de carga */
.spinner {
  width: 20px;
  height: 20px;
  border: 2px solid transparent;
  border-top: 2px solid currentColor;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Responsive breakpoint para tablets */
@media (max-width: 768px) and (min-width: 641px) {
  .hero-stats {
    gap: var(--space-4);
    
    .stat-item {
      min-width: 140px;
      max-width: 180px;
      padding: var(--space-4);
      
      .stat-number {
        font-size: 1.875rem;
      }
      
      .stat-label {
        font-size: 0.8rem;
      }
    }
  }
}

@media (max-width: 640px) {
  .hero-stats {
    flex-direction: column;
    gap: var(--space-3);
    margin-top: var(--space-6);
    
    .stat-item {
      min-width: auto;
      max-width: none;
      padding: var(--space-4);
      
      .stat-number {
        font-size: 1.75rem;
      }
      
      .stat-label {
        font-size: 0.75rem;
      }
    }
  }
  
  .contact-grid {
    grid-template-columns: 1fr;
  }
  
  .skills-grid {
    grid-template-columns: 1fr;
    gap: var(--space-6);
  }
  
  .timeline-item {
    .timeline-content {
      margin-left: var(--space-8);
      padding: var(--space-6);
    }
  }
  
  .card {
    padding: var(--space-6);
  }
}

/* ========================================
   ELEMENTOS ADICIONALES
======================================== */
.text-center { text-align: center; }
.text-muted { color: var(--gray-500); }
.mt-5 { margin-top: var(--space-20); }
.mb-4 { margin-bottom: var(--space-16); }
.d-flex { display: flex; }
.justify-center { justify-content: center; }
.fade-in-up { animation: slideInUp 0.6s ease-out; }
.hover-lift { transition: var(--transition-transform); }
.hover-lift:hover { transform: translateY(-5px); }

/* Enlaces */
a {
  color: var(--primary-600);
  text-decoration: none;
  transition: var(--transition-colors);
  
  &:hover {
    color: var(--primary-700);
    text-decoration: underline;
  }
}

/* Tipografía */
h1, h2, h3, h4, h5, h6 {
  font-weight: 700;
  line-height: 1.2;
  color: var(--gray-900);
}

p {
  margin-bottom: var(--space-4);
  line-height: 1.6;
}

/* Listas */
ul, ol {
  li {
    margin-bottom: var(--space-2);
    
    strong {
      color: var(--primary-600);
      font-weight: 600;
    }
  }
}

/* Botón CV específico */
.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
  color: white !important;
  border: none !important;
  box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4) !important;
  
  &:hover {
    background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%) !important;
    transform: translateY(-2px) !important;
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6) !important;
  }
}

/* ========================================
   ESTILOS DEL HERO MOVIDOS ARRIBA - SECCIÓN REDISEÑADA
======================================== */

/* ===== CV DETALLADO STYLES ===== */
.cv-detailed-section {
  margin-bottom: 3rem;
  
  .cv-section-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--primary-600);
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--primary-100);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .cv-content {
    background: var(--white);
    padding: 1.5rem;
    border-radius: 12px;
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--gray-200);
    
    p {
      margin-bottom: 1rem;
      line-height: 1.7;
      color: var(--gray-700);
      
      &:last-child {
        margin-bottom: 0;
      }
    }
    
    strong {
      color: var(--primary-600);
      font-weight: 600;
    }
  }
}

/* Timeline detallada */
.detailed-timeline {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.detailed-job {
  background: var(--white);
  border-radius: 12px;
  box-shadow: var(--shadow-sm);
  border: 1px solid var(--gray-200);
  overflow: hidden;
  transition: var(--transition-all);
  
  &:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    border-color: var(--primary-200);
  }
}

.job-header-detailed {
  background: linear-gradient(135deg, var(--primary-50) 0%, var(--primary-100) 100%);
  padding: 1.5rem;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  flex-wrap: wrap;
  gap: 1rem;
  
  @media (max-width: 768px) {
    flex-direction: column;
    align-items: stretch;
  }
}

.company-info {
  flex: 1;
  
  .company-name {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--primary-700);
    margin-bottom: 0.25rem;
  }
  
  .job-title-detailed {
    display: block;
    font-size: 1rem;
    font-weight: 600;
    color: var(--gray-700);
    margin-bottom: 0.25rem;
  }
  
  .job-period-detailed {
    display: inline-block;
    background: var(--primary-600);
    color: var(--white);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 500;
  }
}

.contact-ref {
  background: var(--white);
  padding: 1rem;
  border-radius: 8px;
  font-size: 0.875rem;
  color: var(--gray-600);
  border: 1px solid var(--gray-200);
  min-width: 200px;
  
  @media (max-width: 768px) {
    min-width: auto;
  }
  
  strong {
    color: var(--gray-800);
  }
}

.job-description-detailed {
  padding: 1.5rem;
  
  p {
    margin-bottom: 1rem;
    font-weight: 600;
    color: var(--gray-800);
  }
  
  ul {
    list-style: none;
    padding: 0;
    margin: 0;
    
    li {
      position: relative;
      padding-left: 1.5rem;
      margin-bottom: 0.75rem;
      line-height: 1.6;
      color: var(--gray-700);
      
      &:before {
        content: "▶";
        position: absolute;
        left: 0;
        top: 0;
        color: var(--primary-500);
        font-size: 0.75rem;
      }
      
      &:last-child {
        margin-bottom: 0;
      }
    }
  }
}

/* Educación */
.education-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 1.5rem;
}

.education-item {
  background: var(--white);
  padding: 1.5rem;
  border-radius: 12px;
  box-shadow: var(--shadow-sm);
  border: 1px solid var(--gray-200);
  transition: var(--transition-all);
  
  &:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    border-color: var(--primary-200);
  }
  
  h4 {
    color: var(--primary-600);
    font-weight: 600;
    margin-bottom: 0.75rem;
    font-size: 1.1rem;
  }
  
  p {
    margin-bottom: 0.5rem;
    color: var(--gray-700);
    
    &:last-child {
      margin-bottom: 0;
    }
    
    strong {
      color: var(--gray-800);
      font-weight: 600;
    }
  }
}

/* Certificaciones */
.certifications-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 1.5rem;
}

.cert-category {
  background: var(--white);
  padding: 1.5rem;
  border-radius: 12px;
  box-shadow: var(--shadow-sm);
  border: 1px solid var(--gray-200);
  transition: var(--transition-all);
  
  &:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    border-color: var(--primary-200);
  }
  
  h4 {
    color: var(--primary-600);
    font-weight: 600;
    margin-bottom: 1rem;
    font-size: 1.1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  ul {
    list-style: none;
    padding: 0;
    margin: 0;
    
    li {
      position: relative;
      padding-left: 1.5rem;
      margin-bottom: 0.75rem;
      line-height: 1.6;
      color: var(--gray-700);
      
      &:before {
        content: "✓";
        position: absolute;
        left: 0;
        top: 0;
        color: var(--success-500);
        font-weight: bold;
      }
      
      &:last-child {
        margin-bottom: 0;
      }
      
      strong {
        color: var(--gray-800);
        font-weight: 600;
      }
    }
  }
}

/* Referencias */
.references-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 1.5rem;
}

.reference-category {
  background: var(--white);
  padding: 1.5rem;
  border-radius: 12px;
  box-shadow: var(--shadow-sm);
  border: 1px solid var(--gray-200);
  transition: var(--transition-all);
  
  &:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    border-color: var(--primary-200);
  }
  
  h4 {
    color: var(--primary-600);
    font-weight: 600;
    margin-bottom: 1rem;
    font-size: 1.1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
}

.reference-item {
  background: var(--gray-50);
  padding: 1rem;
  border-radius: 8px;
  margin-bottom: 1rem;
  border-left: 4px solid var(--primary-400);
  
  &:last-child {
    margin-bottom: 0;
  }
  
  p {
    margin-bottom: 0.25rem;
    color: var(--gray-700);
    
    &:last-child {
      margin-bottom: 0;
    }
    
    strong {
      color: var(--gray-800);
      font-weight: 600;
    }
  }
}

/* Acciones del CV */
.cv-actions {
  text-align: center;
  margin-top: 2rem;
  padding-top: 2rem;
  border-top: 2px solid var(--gray-200);
  
  .btn {
    margin: 0.5rem;
    
    @media (max-width: 480px) {
      display: block;
      margin: 0.5rem 0;
    }
  }
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .cv-detailed-section {
    margin-bottom: 2rem;
    
    .cv-section-title {
      font-size: 1.25rem;
    }
  }
  
  .detailed-timeline {
    gap: 1.5rem;
  }
  
  .job-header-detailed {
    padding: 1rem;
  }
  
  .job-description-detailed {
    padding: 1rem;
  }
  
  .education-grid,
  .certifications-grid,
  .references-grid {
    grid-template-columns: 1fr;
    gap: 1rem;
  }
}

@media (max-width: 480px) {
  .cv-detailed-section .cv-content,
  .detailed-job,
  .education-item,
  .cert-category,
  .reference-category {
    padding: 1rem;
  }
  
  .cv-detailed-section .cv-section-title {
    font-size: 1.1rem;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.25rem;
  }
}
